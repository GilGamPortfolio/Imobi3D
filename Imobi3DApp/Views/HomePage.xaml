<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Imobi3DApp.Views.HomePage"
             Title="Meus Imóveis">

    <Grid RowDefinitions="Auto, *">
        <!-- Título da Página -->
        <Label Text="Imóveis Cadastrados"
               FontSize="Title"
               HorizontalOptions="Center"
               Margin="0,20,0,10" />

        <!-- Conteúdo Principal (Lista de Imóveis) -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="10" Padding="20">
                <!-- Aqui no futuro teremos a CollectionView para listar os imóveis -->
                <Label Text="Nenhum imóvel cadastrado ainda. Clique em '+' para adicionar."
                       HorizontalOptions="Center"
                       VerticalOptions="CenterAndExpand"
                       IsVisible="True"
                       x:Name="NoImovelMessage"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

    <!-- Botão Flutuante para Adicionar Novo Imóvel -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Adicionar"
                     IconImageSource="plus.png" 
            Clicked="OnAddImovelClicked" />
    </ContentPage.ToolbarItems>

</ContentPage>